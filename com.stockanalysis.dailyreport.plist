<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 任务标识 -->
    <key>Label</key>
    <string>com.stockanalysis.dailyreport</string>
    
    <!-- Python脚本路径（需要修改为实际路径） -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/python3</string>
        <string>/Users/YOUR_USERNAME/股票助手/daily_email_sender.py</string>
    </array>
    
    <!-- 工作目录（需要修改为实际路径） -->
    <key>WorkingDirectory</key>
    <string>/Users/YOUR_USERNAME/股票助手</string>
    
    <!-- 每天早上8点运行 -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    
    <!-- 标准输出日志 -->
    <key>StandardOutPath</key>
    <string>/Users/YOUR_USERNAME/股票助手/logs/daily_report.log</string>
    
    <!-- 标准错误日志 -->
    <key>StandardErrorPath</key>
    <string>/Users/YOUR_USERNAME/股票助手/logs/daily_report_error.log</string>
    
    <!-- 如果失败，自动重启 -->
    <key>KeepAlive</key>
    <false/>
    
    <!-- 在系统启动时运行 -->
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
